{
  "name": "package7-mcp",
  "version": "0.0.2",
  "description": "Universal MCP server for accessing library documentation through LLM agents",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "package7-mcp": "dist/bin/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest --run --exclude='**/*.e2e.test.ts' --exclude='**/*.integration.test.ts'",
    "test:e2e": "vitest --run src/repository/__test__/docs-repository.e2e.test.ts",
    "test:integration": "vitest --run src/__test__/multi-library-integration.test.ts src/config/__test__/libraries.integration.test.ts",
    "test:e2e:watch": "vitest --watch src/repository/__test__/docs-repository.e2e.test.ts",
    "test:integration:watch": "vitest --watch src/__test__/multi-library-integration.test.ts src/config/__test__/libraries.integration.test.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "documentation",
    "library",
    "integration",
    "llm"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "remark-parse": "^11.0.0",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "publishConfig": {
    "access": "public"
  }
}
